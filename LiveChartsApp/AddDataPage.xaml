<Page x:Class="LiveChartsApp.AddDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LiveChartsApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddDataPage">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Windows Users:"/>
            <TextBox x:Name="WindowsInput"/>

            <TextBlock Text="Mac Users:" Margin="0,10,0,0"/>
            <TextBox x:Name="MacInput"/>

            <TextBlock Text="Linux Users:" Margin="0,10,0,0"/>
            <TextBox x:Name="LinuxInput"/>

            <DatePicker x:Name="DatePicker" Margin="0,10,0,0"/>

            <Button Content="Save" Click="SaveButton_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>